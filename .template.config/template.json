  "sources": [
    {
      "exclude": [
        ".template.config/**",
        "**/.vs/**",
        "**/.vscode/**",
        "**/bin/**",
        "**/obj/**"
      ],
      "modifiers": [
        {
          "condition": "(HostIdentifier == \"dotnetcli\" ||  HostIdentifier == \"dotnetcli-preview\")",
          "rename": {
            "Microservice.Solution.sln": "Microservice.sln"
          }
        }
      ]
